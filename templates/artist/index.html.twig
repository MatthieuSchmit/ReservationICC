{% extends 'base.html.twig' %}

{% block title %}Artists{% endblock %}


{% block body %}


    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ url('artist_add') }}" class="btn btn-success"><i class="fa fa-plus"></i> New</a>
    {% endif %}

    <table class="table table-bordered">
        <thead>
        <th>Name</th>
        <th></th>
        <th></th>
        </thead>
        <tbody>
        {% for artist in artists %}
            <tr>
                <td>{{ artist.firstname }} {{ artist.lastname }}</td>
                <td>
                    <a href="{{ url('artist_info', {id: artist.id}) }}"><i class="fa fa-info"></i></a>
                    {% if is_granted('ROLE_ADMIN') %}
                        &nbsp;&nbsp;&nbsp;<a href="#"><i class="fa fa-edit"></i></a>
                    {% endif %}
                </td>
                <td>
                    {% for artistType in artist.type %}
                        {{ artistType.id }}
                        {{ artistType.type.type }}
                    {% endfor %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
