{% extends 'base.html.twig' %}

{% block title %}Shows{% endblock %}

{% block page_title %}Shows{% endblock %}

{% block body %}


    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ url('artist_add') }}" class="btn btn-success"><i class="fa fa-plus"></i> New</a>
    {% endif %}

    <div class="row">
        {% for show in shows %}
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ show.title }}e</h5>
                        <h6 class="card-subtitle mb-2 text-muted">by John Doe</h6>
                        <p class="card-text">
                            <img src="{{ show.posterUrl }}" alt="">
                        </p>
                        <a href="{{ url('show_info', {id: show.id}) }}" class="card-link">Infos</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}
