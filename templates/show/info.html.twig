{% extends 'base.html.twig' %}

{% block title %}{{ show.title }}{% endblock %}


{% block body %}

    <div class="container-fluid" style="background-image: url('{{show.coverImage}}')" >
        <div class="container">
            <h1>{{ show.title }}</h1>
            <p class="h2">
                <strong>{{ show.price }} &euro;</strong>

            </p>
            <a href="#" class="btn btn-primary">Reserver!</a>

            {% if  is_granted('ROLE_ADMIN') %}
                <a href="{# {{ path('ads_edit', {'slug': ad.slug}) }} #}" class="btn btn-secondary">Modifier le spectacle</a>
                <a href="{# {{  path('ads_delete', {'slug' : ad.slug}) }} #}" class="btn btn-danger" oneclick="return confirm(`Etes vous sur de vouloir supprimer l'annonce : {{  ad.title}}?`)">Supprimer l'annonce</a>
            {% endif %}

        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-md-8 mb-3">
                <h3 >{{ show.title}}</h3>

                {{ show.description | raw }}

                <img src="{{ show.coverImage}}" class="avatar avatar-medium" alt="photo de {{ show.title}}">



            </div>
        </div>
    </div>

{% endblock %}
