{% extends 'base.html.twig' %}

{% block title %}Users{% endblock %}

{% block body %}
<div class="container-fluid">
    <table class="table table-bordered">
        <thead>
        <tr>
            <th>Login</th>
            <th>Name</th>
            <th>Email</th>
            <th>Language</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.login }}</td>
                <td>
                    {{ user.firstname }} {{ user.lastname }} <br>
                    {% for role in user.roles %}
                        <span class="badge badge-secondary">{{ role | lower}}</span>
                    {% endfor %}
                </td>
                <td>{{ user.email }}</td>
                <td>{{ user.language }}</td>
                <td>
                    <a href="{{ url('user_profile_admin', {'id':user.id} ) }}">Infos</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
